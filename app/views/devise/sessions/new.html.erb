<%= content_for(:navbar_class, "project-login") %>
<div class="row d-flex justify-content-center">
  <div class="col-xs-10 col-md-4 col-sm-offset-4">
    <div class="form-login">
      <h2>Log in</h2>
      <i class="fas fa-sign-in-alt"></i>
      <hr></hr>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email", placeholder:"Votre mail" } %>
          <%= f.input :password,
          required: false,
          input_html: { autocomplete: "current-password", placeholder:"Votre mot de passe" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Connexion", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
