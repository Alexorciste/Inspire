<div class="content">
<h1>Projects</h1>

<ul>
  <% @projects.each do |project| %>
  <li><%= project.title %></li>
  <%= link_to 'Afficher', project %>
    <% if policy(project).edit? %>
      <%= link_to 'Modifier', edit_project_path(project) %>
      <%= link_to 'Supprimer', project, method: :delete, data: { confirm: 'Êtes-vous sûr-e ?' } %>
    <% end %>
  <% end %>
</ul>
<% if policy(Project).create? %>
  <%= link_to 'Créer nouveau projet', new_project_path %>
<% end %>

<%# <button id="fetch-btn">Click to synonyms</button> %>
</div>