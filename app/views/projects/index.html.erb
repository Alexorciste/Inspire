

<div class="pr-content">
<!-- <h1>Mes projets</h1> !-->
<h1 class="wordCarousel">
        <span class="word">Mes Projets: </span>
        <div class= "one">
<!--        Use classes 2,3, or 4 to match the number of words -->
            <ul class="flip4">
                <li>Oh My</li>
                <li>is-it ?</li>
                <li>What</li>
                <li>God !</li>
            </ul>
        </div>
    </h1>


<ul>
  <% @projects.each do |project| %>
  <li><%= project.title %></li>
  <%= link_to 'Voir |', project ,class: "text" %>
    <% if policy(project).edit? %>
      <%= link_to 'Modifier |', edit_project_path(project), class: "text" %>
      <%= link_to 'Détruire |', project, method: :delete, data: { confirm: 'Êtes-vous sûr-e ?' }, class: "text"%>
    <% end %>
  <% end %>
</ul>
<% if policy(Project).create? %>
  <p><%= link_to 'Créer un nouveau projet', new_project_path, class: "btn btn-dark" %></p>
<% end %>
</div>

